@model List<Movie>
@{ 
    ViewBag.Title = "My Movies";
}

<h2>Welcome To NET Movies</h2>
<p>Watch your favourite movie</p>
<a asp-controller="Movie" asp-action="Add" class="btn btn-primary mb-3">Add New Movie</a>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Rating</th>
            <th>Release Date</th>
            <th>Director</th>
            <th>Duration</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Name</td>
                    <td>@movie.Year</td>
                    <td>@movie.Genre.Name</td>
                    <td>@movie.Rating</td>
                    <td>@movie.ReleaseDate</td>
                    <td>@movie.Director</td>
                    <td>@movie.Duration</td>
                    <td>
                        <a asp-controller="Movie" asp-action="Details"
                           asp-route-id="@movie.MovieId" class="btn btn-info btn-sm">Details</a>
                        <a asp-controller="Movie" asp-action="Edit"
                           asp-route-id="@movie.MovieId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="Movie" asp-action="Delete"
                           asp-route-id="@movie.MovieId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No movies found. Add a new movie to get started!</td>
            </tr>
        }
    </tbody>
</table>

